<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <LinearLayout
        android:id="@+id/vg_header2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradiente_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/monitor_weight_icon"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Calculadora de IMC"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="30dp"
            android:text="Confira abaixo o seu IMC e sua classificação."
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="5"
            android:textSize="64sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="145dp"
            tools:text="23.5"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_class_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A classificação do seu IMC é:"
        android:layout_marginTop="100dp"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="190dp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="251dp"
        tools:text="NORMAL"
        android:textSize="24sp"
        android:textStyle="bold"

        />
</LinearLayout>